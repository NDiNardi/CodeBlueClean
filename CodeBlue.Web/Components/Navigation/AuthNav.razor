@rendermode InteractiveServer

<MudMenu AnchorOrigin="Origin.TopRight"
         TransformOrigin="Origin.TopRight"
         offsetY="true">

    <ActivatorContent>
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       iconSize="Size.Medium"
                       Color="Color.Inherit"
                       Edge="Edge.End"
                       useSvgIcons="true" />
    </ActivatorContent>

    <ChildContent>
        <MudMenuItem Href="/office">Dashboard</MudMenuItem>

        <MudDivider />

        <MudMenuItem Href="/work-orders">Service Requests</MudMenuItem>
        <MudMenuItem Href="/work-orders">Work Orders</MudMenuItem>

        <MudDivider />

        <MudMenuItem Href="/customers">Customers</MudMenuItem>
        <MudMenuItem Href="/claims">Claims</MudMenuItem>

        <MudDivider />

        <MudMenuItem Href="/admin">Admin Tools</MudMenuItem>

        <MudDivider />

        <MudMenuItem Disabled="true">Account Settings</MudMenuItem>

        <MudMenuItem>
            <form method="post" action="/auth/logout" style="margin:0;">
                <MudButton type="Submit"
                           Variant="Variant.Text"
                           Color="Color.Error"
                           fullWidth="true">
                    Log out
                </MudButton>
            </form>
        </MudMenuItem>
    </ChildContent>
</MudMenu>
